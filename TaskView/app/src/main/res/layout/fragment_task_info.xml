<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wburles.uk.taskview.TaskInfoFragment"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <ListView android:id="@+id/task_info_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <TextView android:id="@+id/text_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_info_list"
        android:textSize="16dp" />
    <ListView android:id="@+id/list_task_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_team"/>

</RelativeLayout>
